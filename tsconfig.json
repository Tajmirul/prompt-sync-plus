{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/dts"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
